<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.androidos.listafacil"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/shopping_cart_racing"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.androidos.listafacil.ItemListingActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- Splash screen -->
        <activity
            android:name="br.com.androidos.listafacil.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.androidos.listafacil.ItemForm"
            android:label="@string/title_activity_item_form" >
        </activity>
        <activity
            android:name="br.com.androidos.listafacil.ItemFormActivity"
            android:label="@string/title_activity_item_form" >
        </activity>
    </application>

</manifest>
